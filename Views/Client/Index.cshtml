@model List<myFirstWeb.Models.Domain.Client>
<h1>Client</h1>

<form method="post" id="search-form" class="mt-5">
	<div class="mb-3">
		<label for="name" class="form-label">Project Name</label>
		<input type="text" class="form-control" id="name" name="name" aria-describedby="name">
	</div>
	<div class="mb-3">
		<label for="salary" class="form-label">Start Date</label>
		<input type="number" class="form-control" id="salary" name="salary" aria-describedby="salary">
	</div>
	<div class="mb-3">
		<label for="dateOfBirth" class="form-label">End Date</label>
		<input type="date" class="form-control" id="dateofbirth" name="dateOfBirth" aria-describedby="dateOfBirth">
	</div>
	<button type="submit" class="btn btn-success" id="save-button">Search</button>
	<button type="submit" class="btn btn-warning" id="reset-button">Reset</button>
</form>
<br />
<table class="table table-striped table-hover">
	<thead class="table-primary">
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Name <i class="fa-solid fa-sort" id="sort-icon"></i></th>
			<th scope="col">Number Phone</th>
			<th scope="col">Address</th>
			<th scope="col" class="text-center">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var client in Model)
		{
			<tr>
				<td scope="row">@client.ID</td>
				<td>@client.ClientName</td>
				<td>@client.NumberPhone</td>
				<td>@client.Address</td>
				<td>
					<form asp-action="Delete" asp-controller="Client" method="post">
						<a type="button" class="btn btn-warning ms-2" href="Client/View/@client.ID">Edit</a>
						<input type="hidden" name="id" value="@client.ID">
						<button type="submit" class="btn btn-danger ms-2" onclick="return confirm('Are you sure you want to delete @client.ClientName?')">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
<a asp-controller="Client" asp-action="Add">
	<button type="button" class="btn btn-primary">Add</button>
</a>