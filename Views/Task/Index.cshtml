@model List<myFirstWeb.Models.ProjectEmployee>
@{
}
<h1>Task</h1>

<form method="post" id="search-form" class="mt-5">
	<div class="mb-3">
		<label for="name" class="form-label">Project Name</label>
		<input type="text" class="form-control" id="name" name="name" aria-describedby="name">
	</div>
	<div class="mb-3">
		<label for="salary" class="form-label">Start Date</label>
		<input type="number" class="form-control" id="salary" name="salary" aria-describedby="salary">
	</div>
	<div class="mb-3">
		<label for="dateOfBirth" class="form-label">End Date</label>
		<input type="date" class="form-control" id="dateofbirth" name="dateOfBirth" aria-describedby="dateOfBirth">
	</div>
	<button type="submit" class="btn btn-success" id="save-button">Search</button>
	<button type="submit" class="btn btn-warning" id="reset-button">Reset</button>
</form>

<br />
<table class="table table-striped table-hover">
	<thead class="table-primary">
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Task</th>
			<th scope="col">Start Date <i class="fa-solid fa-sort" id="sort-date"></i></th>
			<th scope="col">End Date <i class="fa-solid fa-sort" id="sort-date"></i></th>
			<th scope="col">Employee <i class="fa-solid fa-sort" id="sort-date"></i></th>
			<th scope="col">Status <i class="fa-solid fa-sort" id="sort-date"></i></th>
			<th scope="col" class="text-center">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var project in Model)
		{
			<tr>
				<td scope="row">@project.ID</td>
				<td>@project.ProjectName</td>
				<td>@project.StartDate.ToString("yyyy-MM-dd")</td>
				<td>@project.EndDate.ToString("yyyy-MM-dd")</td>
				<td>@project.EmployeeName</td>
				<td>@project.Complete</td>
				<td>
					<button>Delete</button>
				</td>
			</tr>
		}
	</tbody>
</table>
<a>
	<button type="button" class="btn btn-primary">Add</button>
</a>